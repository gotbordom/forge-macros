# Dockerfile.ci
FROM node:18-bullseye-slim

# Native build deps needed by node-gyp + keytar (Forge CLI pulls keytar)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    git \
    python3 \
    make \
    g++ \
    pkg-config \
    libsecret-1-dev \
  && rm -rf /var/lib/apt/lists/*

# Ensure node-gyp uses python3
ENV PYTHON=/usr/bin/python3

# Install Forge CLI
RUN npm config set python "$PYTHON" \
  && npm i -g @forge/cli

WORKDIR /app
